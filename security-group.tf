# ALB SG: allow HTTP from anywhere
resource "aws_security_group" "alb_sg" {
  name   = "ujwal-infra-alb-sg"
  vpc_id = aws_vpc.main.id

  ingress {
    description = "HTTP from world"
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = { Name = "ujwal-infra-alb-sg" }
}

# ECS SG: allow app traffic ONLY from ALB SG
resource "aws_security_group" "ecs_sg" {
  name   = "ujwal-infra-ecs-sg"
  vpc_id = aws_vpc.main.id

  ingress {
    description     = "App traffic from ALB"
    from_port       = 80
    to_port         = 80
    protocol        = "tcp"
    security_groups = [aws_security_group.alb_sg.id]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = { Name = "ujwal-infra-ecs-sg" }
}

# Squid SG: (example) allow 3128 from anywhere (tighten later)
resource "aws_security_group" "squid_sg" {
  name        = "ujwal-infra-squid-sg"
  description = "Allow Squid, SSH, HTTP, HTTPS, and DB ports"
  vpc_id      = aws_vpc.main.id

  # SSH
  ingress {
    description = "SSH access"
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  # HTTP
  ingress {
    description = "HTTP access"
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  # HTTPS
  ingress {
    description = "HTTPS access"
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  # Custom DB/App port
  ingress {
    description = "DB/App Port"
    from_port   = 8080
    to_port     = 8080
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  # Squid proxy port
  ingress {
    description = "Squid proxy"
    from_port   = 3128
    to_port     = 3128
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  # Allow all outbound
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}

# RDS SG: allow MySQL only from ECS SG
resource "aws_security_group" "rds_sg" {
  name   = "ujwal-infra-rds-sg"
  vpc_id = aws_vpc.main.id

  ingress {
    description     = "MySQL from ECS tasks"
    from_port       = 3306
    to_port         = 3306
    protocol        = "tcp"
    security_groups = [aws_security_group.ecs_sg.id]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = { Name = "ujwal-infra-rds-sg" }
}
